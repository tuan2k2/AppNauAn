<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_shape"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/nameMonAn_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Súp cua hoàng đế"
                android:textColor="@color/black"
                android:textSize="60px"
                android:textStyle="bold"
                android:layout_marginLeft="40px"
                android:layout_marginTop="20px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/clock25" />

                <TextView
                    android:id="@+id/thoiGianLam_search"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="20 phút"
                    android:textSize="30px" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/user" />

                <TextView
                    android:id="@+id/soNguoiAn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-20px"
                    android:layout_weight="1"
                    android:text="4 người"
                    android:textSize="30px" />
            </LinearLayout>

            <TextView
                android:id="@+id/gthieumonan_search"
                android:layout_width="224dp"
                android:layout_height="99dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Nhắc đến món súp thì chắc chắn rằng món súp cua luôn được xếp vào top đầu những món súp được yêu thích."
                android:textColor="@color/black" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgmonan_search"
            android:layout_width="146dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/imgsupkhoaitay" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>