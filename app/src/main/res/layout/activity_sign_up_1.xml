<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SignUp_1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/background"
                android:scaleType="fitXY"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/header_login"
                app:layout_constraintBottom_toBottomOf="@id/imgHeader"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="415dp"
                android:layout_height="272dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/imgHeader"
                app:layout_constraintEnd_toEndOf="@+id/imgHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60px"
            android:background="@drawable/backgroundlogin"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="107dp"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgmail"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/username"
                    app:tint="@color/colorTextHint" />

                <EditText
                    android:id="@+id/edmail"
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/alef"
                    android:hint="email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorTextPrimary" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorTextHint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgpass"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/key"
                    app:tint="@color/colorTextHint" />

                <EditText
                    android:id="@+id/edpass"
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/alef"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:textColor="@color/colorTextPrimary" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorTextHint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ìmgFullName"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iconuser"
                    app:tint="@color/colorTextHint" />

                <EditText
                    android:id="@+id/txtFullName"
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/alef"
                    android:hint="FullName"
                    android:textColor="@color/colorTextPrimary" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorTextHint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgQueQuan"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/address_25px"
                    app:tint="@color/colorTextHint" />

                <EditText
                    android:id="@+id/txtquequan"
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/alef"
                    android:hint="Quê Quán"
                    android:textColor="@color/colorTextPrimary" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorTextHint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSoNguoiTheoDoi"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/theodoi_24px"
                    app:tint="@color/colorTextHint" />

                <EditText
                    android:id="@+id/txtSoNguoiDk"
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/alef"
                    android:hint="Số Người theo dõi"
                    android:textColor="@color/colorTextPrimary" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorTextHint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSoNguoiTheoDoi1"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/female_profile_24px"
                    app:tint="@color/colorTextHint" />

                <EditText
                    android:id="@+id/linkavatar"
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/alef"
                    android:hint="Link Avatar"
                    android:textColor="@color/colorTextPrimary" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorTextHint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSoNguoiTheoDoi11"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/image_24px"
                    app:tint="@color/colorTextHint" />

                <EditText
                    android:id="@+id/linkAnhBia"
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/alef"
                    android:hint="Link Ảnh Bìa"
                    android:textColor="@color/colorTextPrimary" />


            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorTextHint" />

            <LinearLayout
                android:layout_width="349dp"
                android:layout_height="36dp"
                android:layout_marginTop="50px">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tôi đồng ý với điều khoản của ứng dụng" />


            </LinearLayout>

            <Button
                android:id="@+id/dangki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                android:layout_marginBottom="10dp"
                android:background="@drawable/primary_button_background"
                android:text="SIGN UP"
                android:textAllCaps="false"
                android:textColor="#fff" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>